@model BusinessSuite.Models.ViewModels.CompanyViewModel
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Companies";
}

<div class="container-fluid d-flex flex-column min-vh-100 p-0">
    <div class="col-lg-12 grid-margin stretch-card flex-grow-1">
        <div class="card h-100">
            <div class="card-body">
                <h4 class="card-title">Users</h4>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.companies.FirstOrDefault().CompanyName)</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.companies)
                            {
                                <tr>
                                    <td>@item.CompanyName</td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-center mt-3">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.companies.HasPreviousPage ? string.Empty : "disabled")">
                                <a class="page-link" href="@Url.Action("Index", new { page = Model.companies.PageNumber - 1 })" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @for (var i = 1; i <= Model.totalpages; i++)
                            {
                                <li class="page-item @(i == Model.companies.PageNumber ? "active" : string.Empty)">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.companies.HasNextPage ? string.Empty : "disabled")">
                                <a class="page-link" href="@Url.Action("Index", new { page = Model.companies.PageNumber + 1 })" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

