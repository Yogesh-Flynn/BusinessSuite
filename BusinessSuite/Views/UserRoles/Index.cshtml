@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Applications Roles";
}
<h1>View Roles</h1>

<p>
    <a asp-action="Create">Create Role</a>
</p>

<div class="col-12">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4" style="color:#6C7293">Roles</h6>
        <div class="table-responsive">
            <table class="table table-borderless table-hover table-dark table-red">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">1</th>
                            <td>@item.Id</td>
                            <td>@item.Name</td>

                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
